@model string

<div class="d-flex gap-4">
    <!-- Download Button -->
    <a href="@Url.Content(Model)" id="downloadTemplateButton" class="btn btn-secondary">
        Download Sample File
    </a>

    <!-- Upload Template Button (triggers modal) -->
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#uploadTemplateModal">
        Upload File
    </button>

    <!-- Modal -->
    <div class="modal fade" id="uploadTemplateModal" tabindex="-1" aria-labelledby="uploadTemplateModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="uploadTemplateModalLabel">Upload Template</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Upload Form -->
                    <form asp-page-handler="UploadTemplate" method="post" enctype="multipart/form-data"
                        id="uploadTemplateForm">
                        <div class="form-group">
                            <label for="templateFile">Choose file</label>
                            <input type="file" class="form-control" id="templateFile" name="templateFile" required />
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <!-- Submit the form inside the modal -->
                    <button type="submit" class="btn btn-primary" form="uploadTemplateForm">Submit</button>
                </div>

            </div>
        </div>
    </div>

</div>
